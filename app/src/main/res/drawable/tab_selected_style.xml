<?xml version="1.0" encoding="utf-8"?>

<!-- Tabs styling based on https://sshex.medium.com/android-tablayout-style-customization-29ad0657d49c -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="6dp"
        android:left="6dp"
        android:right="6dp"
        android:top="6dp">

        <shape android:shape="rectangle">
            <solid android:color="@color/light_accent" />
            <corners android:radius="6dp" />
        </shape>

    </item>

</layer-list>